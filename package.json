{
  "name": "telegram-miniapp",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/frontend",
    "apps/backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run start-backend\" \"npm run start-frontend\"",
    "start-backend": "ts-node apps/backend/server.ts",
    "start-frontend": "cd apps/frontend && npm run dev",
    "start-bot": "ts-node backend/bot.ts",
    "build": "npm run build-frontend",
    "build-frontend": "cd frontend && npm run build",
    "start": "node backend/dist/server.js",
    "setup-cert": "bash scripts/setup-cert.sh"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "cors": "^2.8.5",
    "dotenv": "^17.0.0",
    "express": "^5.1.0",
    "telegraf": "^4.16.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.8",
    "concurrently": "^8.2.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
